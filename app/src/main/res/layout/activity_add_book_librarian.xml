<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".librarian.AddBookLibrarianActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_book_activity_message"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="@dimen/margin_top_medium"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:paddingStart="@dimen/padding_start"
        android:paddingEnd="@dimen/padding_end"/>

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/min_height"
        android:layout_below="@+id/message"
        android:layout_marginTop="@dimen/spacing"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_start"
        android:paddingEnd="@dimen/padding_end"
        android:weightSum="1">

        <TextView
            android:id="@+id/tTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/add_book_activity_title"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/eTitleValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="@string/add_book_activity_title_hint"
            android:autofillHints=""
            android:inputType="text"
            android:minWidth="@dimen/min_width"
            android:minHeight="@dimen/min_height" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/authorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLayout"
        android:layout_marginTop="@dimen/spacing"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_start"
        android:paddingEnd="@dimen/padding_end"
        android:weightSum="1" >

        <TextView
            android:id="@+id/tAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/add_book_activity_author"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/eAuthorValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="@string/add_book_activity_author_hint"
            android:inputType="text"
            android:minHeight="@dimen/min_height"
            android:autofillHints="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/publisherLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorLayout"
        android:layout_marginTop="@dimen/spacing"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_start"
        android:paddingEnd="@dimen/padding_end"
        android:weightSum="1">

        <TextView
            android:id="@+id/tPublisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/add_book_activity_publisher"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/ePublisherValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="@string/add_book_activity_publisher_hint"
            android:inputType="text"
            android:minWidth="@dimen/min_width"
            android:minHeight="@dimen/min_height"
            android:autofillHints="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/publicationDateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publisherLayout"
        android:layout_marginTop="@dimen/spacing"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_start"
        android:paddingEnd="@dimen/padding_end"
        android:weightSum="1">

        <TextView
            android:id="@+id/tPublicationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/add_book_activity_publication_date"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/ePublicationDateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="@string/add_book_activity_publication_date_hint"
            android:inputType="date"
            android:minWidth="@dimen/min_width"
            android:minHeight="@dimen/min_height"
            android:autofillHints="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/genreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publicationDateLayout"
        android:layout_marginTop="@dimen/spacing"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_start"
        android:paddingEnd="@dimen/padding_end"
        android:weightSum="1">

        <TextView
            android:id="@+id/tGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/add_book_activity_genre"
            android:textSize="@dimen/text_size" />

        <Spinner
            android:id="@+id/sGenreValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="@string/add_book_activity_genre_hint"
            android:inputType="text"
            android:minWidth="@dimen/min_width"
            android:minHeight="@dimen/min_height"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ISBN10Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genreLayout"
        android:layout_marginTop="@dimen/spacing"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_start"
        android:paddingEnd="@dimen/padding_end"
        android:weightSum="1">

        <TextView
            android:id="@+id/tISBN10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/add_book_activity_ISBN10"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/eISBN10Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="@string/add_book_activity_ISBN10_hint"
            android:inputType="text"
            android:minWidth="@dimen/min_width"
            android:minHeight="@dimen/min_height"
            android:autofillHints="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ISBN13Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ISBN10Layout"
        android:layout_marginTop="@dimen/spacing"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_start"
        android:paddingEnd="@dimen/padding_end"
        android:weightSum="1">

        <TextView
            android:id="@+id/tISBN13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/add_book_activity_ISBN13"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/eISBN13Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="@string/add_book_activity_ISBN13_hint"
            android:inputType="text"
            android:minWidth="@dimen/min_width"
            android:minHeight="@dimen/min_height"
            android:autofillHints="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/saveDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ISBN13Layout"
        android:layout_marginTop="@dimen/spacing"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_start"
        android:paddingEnd="@dimen/padding_end"
        android:weightSum="1" >
        <Button
            android:id="@+id/bSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/add_book_activity_button_save"
            android:contentDescription="" />

        <Button
            android:id="@+id/bDelete"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/add_book_activity_button_delete"
            android:contentDescription="" />
    </LinearLayout>

</RelativeLayout>